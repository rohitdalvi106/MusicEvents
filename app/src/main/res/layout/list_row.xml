<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/row_bg"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/headlinerText"
        android:text="Artist"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:textSize="16sp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/venueText"
        android:text="Venue"
        android:textStyle="bold"
        android:layout_below="@id/headlinerText"
        android:layout_centerHorizontal="true"
        android:textSize="16sp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/whenText"
        android:text="When"
        android:textStyle="italic"
        android:layout_below="@id/venueText"
        android:layout_centerHorizontal="true"
        android:textSize="16sp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/whereText"
        android:text="Venue"
        android:textStyle="italic"
        android:layout_below="@id/whenText"
        android:layout_centerHorizontal="true"
        android:textSize="16sp"/>

</RelativeLayout>